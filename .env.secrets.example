# Project Athena Secrets
# Copy this file to .env.secrets and fill in actual values
# Then run: ./scripts/create-secrets.sh

# =============================================================================
# REQUIRED - Database
# =============================================================================
ATHENA_DB_PASSWORD=your_psadmin_password_here

# =============================================================================
# OPTIONAL - Encryption (auto-generated if not provided)
# =============================================================================
# ENCRYPTION_KEY=
# ENCRYPTION_SALT=
# SESSION_SECRET_KEY=
# JWT_SECRET=

# =============================================================================
# OPTIONAL - Home Assistant
# =============================================================================
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your_ha_long_lived_token

# =============================================================================
# OPTIONAL - RAG Service API Keys
# Services will start without these but won't return data
# =============================================================================

# Weather services (weather, onecall)
OPENWEATHER_API_KEY=

# Web search
BRAVE_API_KEY=

# News
NEWSAPI_KEY=

# Streaming/Movies
TMDB_API_KEY=

# Events
TICKETMASTER_API_KEY=
SEATGEEK_API_KEY=

# Stocks
ALPHA_VANTAGE_API_KEY=

# Dining
YELP_API_KEY=

# Recipes
SPOONACULAR_API_KEY=

# Sports
THESPORTSDB_API_KEY=

# Flights
