TICKETMASTER_API_KEY=
SEATGEEK_API_KEY=

# Finance
ALPHA_VANTAGE_API_KEY=

# Food & Dining
YELP_API_KEY=
SPOONACULAR_API_KEY=

# Sports
THESPORTSDB_API_KEY=

# Travel
FLIGHTAWARE_API_KEY=
GOOGLE_MAPS_API_KEY=

